{
  "name": "@uzeed/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsup src/index.ts --format esm --watch --out-dir dist --sourcemap --onSuccess \"node --env-file=.env dist/index.js\"",
    "build": "pnpm --filter @uzeed/shared build && prisma generate && tsup src/index.ts --format esm --out-dir dist --sourcemap",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "ts-node src/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@uzeed/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.18.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "zod": "^3.24.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "prisma": "^5.20.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "eslint": "^9.19.0",
    "ts-node": "^10.9.2"
  }
}